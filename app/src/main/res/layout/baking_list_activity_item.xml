<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x176"
    android:background="@color/white">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/x16"
        android:layout_marginLeft="@dimen/x16"
        android:layout_marginTop="@dimen/x8"
        android:layout_marginBottom="@dimen/x16"
        app:cardElevation="@dimen/x8"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/x4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/recipeNameTvAtHP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="@dimen/xs22"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/x16"
                android:layout_marginRight="@dimen/x16"
                android:singleLine="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x38"
                android:orientation="horizontal"
                android:background="@color/colorAccent"
                android:paddingRight="@dimen/x16"
                android:paddingLeft="@dimen/x32">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="@dimen/x16"
                        android:layout_height="@dimen/x16"
                        android:src="@drawable/ic_shopping_cart_black_24dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/imageContentDesc"/>
                    <TextView
                        android:id="@+id/noOfIngredientTvAtHP"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x4"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="@dimen/x16"
                        android:layout_height="@dimen/x16"
                        android:src="@drawable/ic_directions_walk_black_24dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/imageContentDesc"/>
                    <TextView
                        android:id="@+id/noOfStepsTvAtHP"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x4"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="@dimen/x16"
                        android:layout_height="@dimen/x16"
                        android:src="@drawable/ic_person_black_24dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/imageContentDesc"/>
                    <TextView
                        android:id="@+id/servingTvAtHP"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x4"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>